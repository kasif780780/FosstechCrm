@model FossTechCrm.Entities.Expanse

@if (Model != null)
{
   <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
                @if (Model.Id > 0)
                {

                <span>Edit Expanse</span>
                }
                else
                {
                <span>Create Expanse</span>
                }

            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        
        <div class="modal-body">
            <form id="formAction">
                <div class="form-row">
                    <input type="hidden" name="LeadID" value="@Model.Id" />
                    <div class="form-group col-md-6">
                        <label for="First Name"> Date of Expense</label>
                        <input class="form-control" name="DateOfSpend" id="datepicker" value="@Model.DateOfSpend">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Company Name">Amount</label>
                        <input class="form-control" name="Amount" value="@Model.Amount">
                    </div>
                   
                    @*<div class="form-group col-md-6">
                        <label for="Company Name">Category</label>
                        <input class="form-control" name="Category" value="@Model.Category">
                    </div>*@
                    <div class="form-group col-md-6">
                        <label for="Company Name">Category</label>
                        <select class="form-control" name="Category" value="@Model.Category">
                            <option>Toll Charge</option>
                            <option>Train</option>
                            <option>Training</option>
                            <option>Utility</option>
                            <option>Tax </option>
                            <option>Taxi </option>
                            <option>Software </option>
                            <option>Snacks </option>
                            <option>Phone  </option>
                            <option>Parking </option>
                            <option>Others </option>
                            <option>Internet  </option>
                            <option>Hotel </option>
                            <option>Food </option>
                            <option>Flight </option>
                            <option>Courier </option>
                            
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Company Name">Currency</label>
                        <input class="form-control" name="Currency" value="@Model.Currency">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Company Name">Marchant</label>
                        <input class="form-control" name="Marchant" value="@Model.Marchant">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Company Name">Purpose</label>
                        <input class="form-control" name="Purpose" value="@Model.Purpose">
                    </div>

                    <div class="form-check">
                        <input type="checkbox" name="Reimbursable" class="form-check-input" id="exampleCheck1" value="@Model.Reimbursable">
                        <label class="form-check-label" for="exampleCheck1">Reimbursable</label>
                    </div>
                </div>




            </form>
            <div class="errorDiv"></div>
        </div>
        <div class="modal-footer">
            <buttond type="button" class="btn btn-secondary" data-dismiss="modal">Close</buttond>
            <button id="ActionButton" type="button" class="btn btn-primary">Save changes</button>
        </div>
        
    </div>

}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $("#ActionButton").click(function () {
         $.ajax({
             url: '@Url.Action("Action","Expanse")',
             type: "post",
             data: $("#formAction").serialize()
        })
            .done(function
                (response) {
                
                if (response.Success) {
                    location.reload();

                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            })
    })
</script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>
