@model FossTechCrm.Entities.Lead

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
                @if (Model.LeadID > 0)
                {

                    <span>Edit Lead</span>
                }
                else
                {
                    <span>Create Lead</span>
                }

            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="formAction">
                <div class="form-row">
                    <input type="hidden" name="LeadID" value="@Model.LeadID" />
                    <div class="form-group col-md-6">
                        <label for="First Name">First Name</label>
                        <input class="form-control" name="FirstName" placeholder="Name" value="@Model.FirstName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Company Name">Company Name</label>
                        <input class="form-control" name="CompanyName" value="@Model.CompanyName">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for=" Phone">Phone</label>
                        <input class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Email</label>
                        <input class="form-control" name="Email" value="@Model.Email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="First Name">Rating</label>
                        <input class="form-control" name="Ratings" valu=@Model.Ratings>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Status">Status </label>
                        <input class="form-control" name="Status" value=@Model.Status>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="LeadSource">LeadSource </label>
                        <input class="form-control" name="LeadSource" value=@Model.LeadSource>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="Ratings, ">Description </label>
                        <input class="form-control" name="Description" value=@Model.Description>
                    </div>

                </div>



            </form>
            <div class="errorDiv"></div>
        </div>
        <div class="modal-footer">
            <buttond type="button" class="btn btn-secondary" data-dismiss="modal">Close</buttond>
            <button id="ActionButton" type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<script>
    $("#ActionButton").click(function () {
         $.ajax({
             url: '@Url.Action("Action","Lead")',
             type: "post",
             data: $("#formAction").serialize()
        })
            .done(function
                (response) {
                debugger;
                if (response.Success) {
                    location.reload();

                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            })
    })
</script>
